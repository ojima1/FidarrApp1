<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FidarrApp1.TermsPage"
             Title="TermsPage">
    
    <StackLayout Padding="20">
        <Label Text="Terms and Conditions" FontSize="Title" HorizontalOptions="Center" Margin="0,20,0,10" />

        <ScrollView>
            <Label Text="{Binding TermsText}" FontSize="Body" />
        </ScrollView>

        <Button Text="Accept" Clicked="Button_Clicked_1" BackgroundColor="Tomato" 
                HorizontalOptions="Center" Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>