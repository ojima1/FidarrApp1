<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FidarrApp1.ForgotPassword"
             Title="ForgotPassword">
    <StackLayout Margin="20">
        <Label Text="Password Recovery" TextColor="Tomato" FontSize="Title" 
               HorizontalOptions="CenterAndExpand" 
               VerticalOptions="CenterAndExpand" />

        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" 
               ClearButtonVisibility="WhileEditing"
               Margin="0,20,0,0" />
        
        <Button Text="Send Reset Link" TextColor="White"
                BackgroundColor="Tomato" Clicked="Button_Clicked" 
                Margin="0,20,0,0" />

        <Button Text="Back" Clicked="Button_Clicked_1" TextColor="Tomato" BackgroundColor="Transparent" HorizontalOptions="Start" Margin="0,20,0,0" />
    </StackLayout>


</ContentPage>